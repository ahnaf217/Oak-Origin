@using demo.ViewModels;
@model ProductViewModels;
@{
	ViewData["Title"] = "Shop";
}

<!doctype html>
<html lang="en">
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
	<meta name="author" content="Untree.co">
	<link rel="shortcut icon" href="@Url.Content("~/favicon.png")">

	<meta name="description" content="" />
	<meta name="keywords" content="bootstrap, bootstrap4" />

	<!-- Bootstrap CSS -->
	<link href="@Url.Content("~/css/bootstrap.min.css")" rel="stylesheet">
	<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
	<link href="@Url.Content("~/css/tiny-slider.css")" rel="stylesheet">
	<link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
	<title>Furni Free Bootstrap 5 Template for Furniture and Interior Design Websites by Untree.co </title>
</head>

<body>

	<!-- Start Hero Section -->
	<div class="hero">
		<div class="container">
			<div class="row justify-content-between">
				<div class="col-lg-5">
					<div class="intro-excerpt">
						<h1>Shop</h1>
					</div>
				</div>
				<div class="col-lg-7">
				</div>
			</div>
		</div>
	</div>
	<!-- End Hero Section -->

	<div class="untree_co-section product-section before-footer-section">
		<div class="container">
			<div class="row">

				<!--new-arrivals start -->
				<section id="new-arrivals" class="new-arrivals">
					<div class="container">
						<div class="section-header">
							<!--<h2>new arrivals</h2>-->
						</div>
						<div class="new-arrivals-content">
							<div class="row">
								@foreach (var product in Model.Products)
								{
									<div class="col-md-3 col-sm-4">
										<div class="single-new-arrival">
											<div class="single-new-arrival-bg">
												<img src="@Url.Content(product.Image)" alt="@product.Name">

												<div class="single-new-arrival-bg-overlay"></div>
												<div class="sale bg-1">
													<p>sale</p>
												</div>
												<div class="new-arrival-cart">
													<p>
														<span class="lnr lnr-cart"></span>
														<a href="#">add <span>to </span> cart</a>
													</p>
													<p class="arrival-review pull-right">
														<span class="lnr lnr-heart"></span>
														<span class="lnr lnr-frame-expand"></span>
													</p>
												</div>
											</div>
											<h4><a href="#">@product.Name</a></h4>
											<p class="arrival-product-price">$@product.Price</p>
										</div>
									</div>
								}	
								

								
							</div>
						</div>
					</div>
				</section>
				<!--new-arrivals end -->

			</div>
		</div>
	</div>

	<!-- Scripts -->
	<script src="@Url.Content("~/js/bootstrap.bundle.min.js")"></script>
	<script src="@Url.Content("~/js/tiny-slider.js")"></script>
	<script src="@Url.Content("~/js/custom.js")"></script>
</body>
</html>
