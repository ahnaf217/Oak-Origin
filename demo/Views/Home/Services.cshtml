@{
    ViewData["Title"] = "Our Services";
}

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="author" content="Untree.co">
    <link rel="shortcut icon" href="@Url.Content("~/favicon.png")">

    <meta name="description" content="" />
    <meta name="keywords" content="bootstrap, bootstrap4" />

    <!-- Bootstrap CSS -->
    <link href="@Url.Content("~/css/bootstrap.min.css")" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <link href="@Url.Content("~/css/tiny-slider.css")" rel="stylesheet">
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />

</head>

<!-- HERO -->
<section class="services-hero text-white d-flex align-items-center">
    <div class="container text-center">
        <h1 class="fw-bold mb-2">Our Services</h1>
        <p class="mb-0 breadcrumb-light">
            <a asp-controller="Home" asp-action="Index">Home</a> / Services
        </p>
        <p class="text-muted">
            We provide innovative solutions to help businesses grow and succeed.
            Our services are designed to deliver value, efficiency, and excellence.
        </p>
    </div>
</section>

<!-- INTRO -->
<section class="py-5 bg-light-custom">
    <div class="container text-center">
        <h5 class="accent-text mb-2">— What We Do</h5>
        <h2 class="fw-bold">Furniture & Interior Services Built to Last</h2>
        <p class="custom-muted">
    We design, build and deliver premium furniture with sustainable materials and a comfort-first approach.
</p>


    </div>
</section>

<!-- SERVICE CARDS -->
<section class="py-5">
    <div class="container">
        <div class="row g-4">

            <div class="col-md-6 col-lg-4">
                <div class="card service-card h-100">
                    <div class="card-body">
                        <div class="icon-circle mb-3"><i class="fa-solid fa-couch"></i></div>
                        <h5 class="card-title">Custom Furniture Design</h5>
                        <p class="custom-text">
                            Bespoke sofas, tables and storage built to your space & style.
                        </p>

                        <a asp-controller="Products" asp-action="Index" class="btn btn-accent">Explore</a>
                    </div>
                </div>
            </div>

            <div class="col-md-6 col-lg-4">
                <div class="card service-card h-100">
                    <div class="card-body">
                        <div class="icon-circle mb-3"><i class="fa-solid fa-ruler-combined"></i></div>
                        <h5 class="card-title">Space Planning</h5>
                        <p class="custom-text">
                            Layout & 3D mocks to optimize flow, light and comfort.
                        </p>
                        <a asp-controller="Home" asp-action="Contact" class="btn btn-accent">Book a Consult</a>
                    </div>
                </div>
            </div>

            <div class="col-md-6 col-lg-4">
                <div class="card service-card h-100">
                    <div class="card-body">
                        <div class="icon-circle mb-3"><i class="fa-solid fa-swatchbook"></i></div>
                        <h5 class="card-title">Material & Finish Selection</h5>
                        <p class="custom-text">
                            Premium woods, eco fabrics and durable finishes — curated for you.
                        </p>
                        <a asp-controller="Home" asp-action="Services" class="btn btn-accent">See Options</a>
                    </div>
                </div>
            </div>

            <div class="col-md-6 col-lg-4">
                <div class="card service-card h-100">
                    <div class="card-body">
                        <div class="icon-circle mb-3"><i class="fa-solid fa-screwdriver-wrench"></i></div>
                        <h5 class="card-title">Upholstery & Restoration</h5>
                        <p class="custom-text">
                            Repair, reupholster and renew your favorite pieces with care.
                        </p>
                        <a asp-controller="Home" asp-action="Services" class="btn btn-accent">Get a Quote</a>
                    </div>
                </div>
            </div>

            <div class="col-md-6 col-lg-4">
                <div class="card service-card h-100">
                    <div class="card-body">
                        <div class="icon-circle mb-3"><i class="fa-solid fa-truck-fast"></i></div>
                        <h5 class="card-title">Delivery & Installation</h5>
                        <p class="custom-text">
                            White-glove delivery, on-site assembly and clean-up included.
                        </p>
                        <a asp-controller="Home" asp-action="Services" class="btn btn-accent">Learn More</a>
                    </div>
                </div>
            </div>

            <div class="col-md-6 col-lg-4">
                <div class="card service-card h-100">
                    <div class="card-body">
                        <div class="icon-circle mb-3"><i class="fa-solid fa-headset"></i></div>
                        <h5 class="card-title">Warranty & 24/7 Support</h5>
                        <p class="custom-text">
                            Extended warranty and always-on customer care for peace of mind.
                        </p>
                        <a asp-controller="Home" asp-action="Contact" class="btn btn-accent">Contact Us</a>
                    </div>
                </div>
            </div>

        </div>
    </div>
</section>

<!-- HOW IT WORKS -->
<section class="py-5 bg-light-custom">
    <div class="container">
        <div class="text-center mb-5">
            <h5 class="accent-text mb-2">— How It Works</h5>
            <h2 class="fw-bold">From Idea to Installation</h2>
        </div>

        <div class="row g-4">
            <div class="col-md-6 col-lg-4">
                <div class="step-item h-100">
                    <span class="badge-step">1</span>
                    <h6>Free Consultation</h6>
                    <p class="custom-text">Tell us your space, style and budget.</p>
                </div>
            </div>
            <div class="col-md-6 col-lg-4">
                <div class="step-item h-100">
                    <span class="badge-step">2</span>
                    <h6>Design & Mockups</h6>
                    <p class="custom-text">We share layout & 3D concepts for approval.</p>
                </div>
            </div>
            <div class="col-md-6 col-lg-4">
                <div class="step-item h-100">
                    <span class="badge-step">3</span>
                    <h6>Material Selection</h6>
                    <p class="custom-text">Choose woods, fabrics and finishes.</p>
                </div>
            </div>
            <div class="col-md-6 col-lg-4">
                <div class="step-item h-100">
                    <span class="badge-step">4</span>
                    <h6>Build & QA</h6>
                    <p class="custom-text">Crafted by experts, tested for durability.</p>
                </div>
            </div>
            <div class="col-md-6 col-lg-4">
                <div class="step-item h-100">
                    <span class="badge-step">5</span>
                    <h6>Delivery & Setup</h6>
                    <p class="custom-text">White-glove delivery and installation.</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- FAQ -->
<section class="py-5">
    <div class="container">
        <div class="text-center mb-4">
            <h5 class="accent-text mb-2">— FAQs</h5>
            <h2 class="fw-bold">You Might Be Wondering…</h2>
        </div>

        <div class="accordion" id="faq">
            <div class="accordion-item">
                <h2 class="accordion-header" id="q1">
                    <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#a1">
                        How long does a custom piece take?
                    </button>
                </h2>
                <div id="a1" class="accordion-collapse collapse show" data-bs-parent="#faq">
                    <div class="accordion-body">
                        Most builds take 2–4 weeks depending on size and finish.
                    </div>
                </div>
            </div>

            <div class="accordion-item">
                <h2 class="accordion-header" id="q2">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#a2">
                        Do you offer on-site measurements?
                    </button>
                </h2>
                <div id="a2" class="accordion-collapse collapse" data-bs-parent="#faq">
                    <div class="accordion-body">
                        Yes, our team can visit and measure your space before we design.
                    </div>
                </div>
            </div>

            <div class="accordion-item">
                <h2 class="accordion-header" id="q3">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#a3">
                        What is your warranty policy?
                    </button>
                </h2>
                <div id="a3" class="accordion-collapse collapse" data-bs-parent="#faq">
                    <div class="accordion-body">
                        Structural warranty up to 3 years; upholstery warranty up to 1 year.
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- CTA -->
<section class="cta-band text-white">
    <div class="container d-flex flex-column flex-md-row align-items-center justify-content-between">
        <div>
            <h2 class="mb-2"> Ready to start a project?</h2>
            <p class="mb-0 opacity-75">Get a free consultation and personalized quote.</p>
        </div>
        <div class="mt-3 mt-md-0">
            <a asp-controller="Home" asp-action="Contact" class="btn btn-light me-2">Contact Us</a>
            <a asp-controller="Products" asp-action="Index" class="btn btn-accent">Explore Products</a>
        </div>
    </div>
</section>

